{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Cumulative deaths in UK cities",
      "subtitle":"",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":11,
      "anchor": "start",
      "color": "black"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/deaths_ratecity.csv",
      "format": {"type": "csv"}
    },
  
  "selection": {
  "Region": {
    "type": "single",
    "fields": ["areaName"],
    "bind": {
      "input": "select",
      "options": [null, "Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"],
      "name": "Pick a city"
    }
  }
},

   "transform":[

      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"]}
        },

      {"filter": {"selection": "Region"}}


    ],    
    
    "height": 300,
    "width": 310,
     
    "mark": {"type": "line", "point": false},
   
    "encoding": {
  
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
  
      "y": {
        "field": "cumDeaths28DaysByDeathDate",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}
      },
  
      "color": {
        "field": "areaName",
        "type": "nominal",
        "scale": {"scheme": "set1"},
        "title": null,
        "legend": {
          "orient": "top-left", 
          "fillColor": "#FcFdFd"}
      }
  }
  }