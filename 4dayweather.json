
  {
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "Productivity UK",
  
     "title": {
      "text": "Weather forecast",
      "subtitle":"Bristol for the next 4 days",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
    "data": {
      "url": "https://api.openweathermap.org/data/2.5/forecast?q=Bristol,uk&units=metric&appid=36628bdc020423573e102b2f746c1c0a", 
      "format": {"type": "json", "property":"list"}},
    "height": 300,
    "width": 345,
    "mark": {
      "type": "line",
      "point": true,
      "interpolate": "monotone",
      "color": "blueviolet"
    },
    "encoding": {
      "x": {
        "field": "dt_txt",
        "type": "temporal",
        "axis": {
          "title": "Date",
          "grid": false,
          "labelSeparation": 20,
          "ticks": false
        }
      },
      "y": {
        "field": "main.temp",
        "type": "quantitative",
        "title": "Tempreture, celcius",
        "axis": {"grid": false}
      }
    }
  }
