{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/ECO/chart_fertility1.csv"
  },
  "height": 300,
  "width": 300,

  "title": {
    "text": "Fertility Rate",
    "subtitle": "Average number of children born to a woman over her lifetime. Source: OECD",
    "subtitleFontSize": 10,
    "color": "black",
    "fontSize": 15
  },
  
  "encoding": {
    "x": 
    {
      "field": "TIME",
      "type": "temporal",
      "title": ""
    },

    "y": 
    {
      "field": "Value",
      "type": "quantitative",
      "axis": {
      "title": "Number of children",
      "titleFontSize": 10,
      "titleFontWeight": 500
      }
      
    },

    "color": 
    {
      "condition": {
        "param": "hover",
        "field": "Country",
        "type": "nominal",
        "scale": {"range": ["#122b39", "#0063af", "#179fdb", "#0e5f83", "#00457a", "#0063af", "#3382bf", "#80b1d7", "#b3d0e7", "#c3e9e9"]}
      },
      "value": "grey"
    },

    "opacity": 
    {
      "condition": {"param": "hover", "value": 1}, 
      "value": 0.2
    },

    "tooltip": 
    [
      {"field": "Country"},
      {"field": "year", "title": "Year"},
      {"field": "Value", "title": "Fertility Rate"}
    ]
  },


  "layer": 
  [
    {
      "description": "transparent layer to make it easier to trigger selection",

      "mark": {"type": "line", "strokeWidth": 10, "stroke": "transparent"},

      "params": 
      [
        {
          "name": "hover",
          "select": 
          {
            "type": "point", 
            "fields": ["Country"], 
            "on": "mouseover"
          }
        }
      ]
    },

    {"mark": "line"}
  ]
}
