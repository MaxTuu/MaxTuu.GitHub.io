{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Covid Live - UK cities",
    "subtitle":"New cases by specimen date, rolling rate",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black",
    "XYZcolor": "#cbc7cf",
    "XYZsubtitleColor":"#cbc7cf"

  },
  
  "config": {
    "background":"#F2DFCE",
    "view": {
      "stroke": "transparent"
    }
  },

  "XYZconfig": {
    "background":"#F2DFCE",
    "view": {
      "stroke": "transparent"}},
  

   "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=newCasesBySpecimenDateRollingRate&format=csv",
    "format": {"type": "csv"}
  },

  "selection": {
  "Region": {
    "type": "single",
    "fields": ["areaName"],
    "bind": {
      "input": "select",
      "options": [null, "Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"],
      "name": "Pick a city"
    }
  }
},

   "transform":[

      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"]}
        },

      {"filter": {"selection": "Region"}}


    ],    
  
  "height": 300,
  "width": 300,
   
  "mark": {"type": "line", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {
        "grid": false,
        "XYZlabelColor":"#F2DFCE"}
    },

    "y": {
      "field": "newCasesBySpecimenDateRollingRate",
      "type": "quantitative",
      "title": null,
      "axis": {
        "grid": false,
        "XYZlabelColor":"#F2DFCE"
      }
    },

    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "inferno"},
      "XYZscale": {"scheme": "yelloworangered"},
      "title": null,
      "legend": {
        "orient": "top-left", 
        "fillColor": "#F2DFCE",
        "XYZfillColor": "#122b39",
        "XYZlabelColor":"antiquewhite"
      }
    }
}
}
