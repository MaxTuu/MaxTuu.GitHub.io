{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Covid deaths in the UK",
      "subtitle":"Cumulative covid-19 deaths by city, up until 04/10/2021.    Source: data.gov.uk",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "font": "Italic",
      "fontSize":15,
      "anchor": "start",
      "color": "black"
    },
    
    "config":{"background": "#F2DFCE"},
     "height": 300,
     "width": 300,

     "data": {
      "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/deaths_ratecity.csv",
      "format": {"type": "csv"}
    },
  
  "selection": {
  "Region": {
    "type": "single",
    "fields": ["areaName"],
    "bind": {
      "input": "select",
      "options": [null, "Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"],
      "name": "Pick a city"
    }
  }
},

   "transform":[

      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Bristol, City of", "Glasgow City", "Manchester", "Cardiff", "Birmingham", "Belfast", "Leeds", "Liverpool"]}
        },

      {"filter": {"selection": "Region"}}


    ],    
    

     
    "mark": {"type": "line", "point": false},
   
    "encoding": {
  
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false
        }
        
      },
  
      "y": {
        "field": "cumDeaths28DaysByDeathDate",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": true, "gridColor": "darkgrey"}
      },
  
      "color": {
        "field": "areaName",
        "type": "nominal",
        "scale": {"scheme": "inferno"},
        "title": null,
        "legend": {
          "orient": "top-left", 
          "fillColor": "#F2DFCE",
          "strokeColor": "black",
          "padding": 3}
      }
  }
  }
