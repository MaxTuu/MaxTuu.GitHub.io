{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Two vertically concatenated charts that show a histogram of precipitation in Seattle and the relationship between min and max temperature.",

  "params": 
  [
    {
      "name": "choice",
      "value": 0,
      "bind": {"input": "select", "options":[0,1]}
    }
  ],

  "data": 
  {
    "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/project/graph6_topo.json",
    "format": {"type": "topojson", "feature": "continent_Europe_subunits"}
  },

  "resolve": {"scale": {"color": "independent"}},

  "projection": {"type": "naturalEarth1"},

  "width": 500,
  "height": 500,


  "layer": 
  [

    {
      "mark": "geoshape",

      "params": 
      [
        {
          "name": "choice",
          "value": 0,
          "bind": {"input": "select", "options":[0,1]}
        }
      ],

      "encoding": 
      {
        "color": 
          {
            "field": "properties.Average",
            "type": "quantitative",
            "scale": {"scheme": "cividis"},
            "legend": null
          }
      }
    },

    {
      "mark": {"type": "geoshape", "opacity": {"expr": "choice"}},
      "encoding": 
      {
        "color": 
        {
          "field": "properties.temperatureAnomaly",
          "type": "quantitative",
          "scale": {"scheme": "yelloworangered"},
          "legend": null
        }
      }
    }
  ]

}
