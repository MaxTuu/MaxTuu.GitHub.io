{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


  "data": 
  {
    "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/project/graph5_data.json"
  },

  "title": 
  {
    "text": "Okun's Law",
    "anchor": "middle",
    "subtitle": "GDP growth and change in Employment rate"
  },


  "transform": [{"filter": "datum.Year > 2015"}],

  "mark": 
  {
    "type": "point",
    "filled": true
  },
  "width": 300,
  "height": 300,

  "params": 
  [
    { 
      "name": "yearSlide", "value": 2016, 
      "select": {"type": "point", "fields": ["Year"]},
      "bind": 
      {
        "Year": 
        {
          "input": "range", 
          "min": 2016, 
          "max": 2020, 
          "step": 1,
          "name": "Pick a year to highlight:"
        }
      }
    }
  ],

  "encoding": 
  {
    "x": {
      "field": "GDP Growth",
      "type": "quantitative"
    },
    "y": {
      "field": "Employment Rate Change",
      "type": "quantitative",
      "scale": {"zero": false}
    },

    "color": 
    {
      "field": "Employment Rate Change", 
      "type": "quantitative", 
      "scale": {"scheme": "redyellowgreen"},
      "legend": null
    },


    "size": 
    {
      "field": "GDP", 
      "type": "quantitative", 
      "legend": null,
      "scale": {"rangeMax":3000, "rangeMin": 10}
      },

    "opacity": 
    {
      "condition": 
      {
        "param": "yearSlide", "value": 1
      },
      "value": 0.1
    }

  }



}
