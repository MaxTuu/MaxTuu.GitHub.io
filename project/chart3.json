{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/project/graph5_data.json"
  },

  "mark": 
  {
    "type": "point",
    "filled": true
  },
  "width": 300,
  "height": 300,

  "params": 
  [
    { 
      "name": "yearSlide", "value": 2010, 
      "select": {"type": "point", "fields": ["Year"]},
      "bind": 
      {
        "Year": 
        {
          "input": "range", 
          "min": 2010, 
          "max": 2020, 
          "step": 1,
          "name": "Pick a year to highlight:"
        }
      }
    }
  ],

  "encoding": 
  {
    "x": {
      "field": "GDP Growth",
      "type": "quantitative"
    },
    "y": {
      "field": "Employment Rate Change",
      "type": "quantitative",
      "scale": {"zero": false}
    },

    "color": 
    {
      "field": "Employment", 
      "type": "quantitative", 
      "scale": {"scheme": "redyellowgreen"}
    },

    "shape": {"field": "Country", "type": "nominal", "legend": null},
    "size": 
    {
      "field": "GDP", 
      "type": "quantitative", 
      "legend": null,
      "scale": {"rangeMax":3000, "rangeMin": 10}
      },

    "opacity": 
    {
      "condition": 
      {
        "param": "yearSlide", "value": 1
      },
      "value": 0
    }

  }
}
