{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


  "data": 
  {
    "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/project/graph5_data.json"
  },

  "title": 
  {
    "text": "Okun's Rule of Thumb",
    "anchor": "middle",
    "subtitle": ["Correlation between GDP growth and change in Employment rate","(Left click and scroll to explore the scatter plot)"]
  },

  "background": "#FeFeF8",



  "mark": 
  {
    "type": "point",
    "filled": true
  },
  "width": 400,
  "height": 400,

  "params": 
  [
    { 
      "name": "yearSlide", "value": 2010, 
      "select": {"type": "point", "fields": ["Year"]},
      "bind": 
      {
        "Year": 
        {
          "input": "range", 
          "min": 2010, 
          "max": 2020, 
          "step": 1,
          "name": "Pick a year to highlight:"
        }
      }
    },

    {
    "name": "grid",
    "select": "interval",
    "bind": "scales"
  }
  ],

  "encoding": 
  {
    "x": {
      "field": "GDP Growth",
      "type": "quantitative",
      "scale": {"domain": [-10, 15]}
    },
    "y": {
      "field": "Employment Rate Change",
      "type": "quantitative",
      "scale": {"domain": [-5, 7]}
    },

    "color": 
    {
      "field": "Employment Rate Change", 
      "type": "quantitative", 
      "scale": {"scheme": "redyellowgreen"},
      "legend": 
      {
        "title": "Unemployment Rate",
        "titleOrient": "right",
        "legendY": 100,
        "legendX": 420,
        "orient": "none"
      }
    },

    "size": 
    {
      "field": "GDP", 
      "type": "quantitative", 
      "legend": null,
      "scale": {"rangeMax":8000, "rangeMin": 500}
      },

    "opacity": 
    {
      "condition": 
      {
        "param": "yearSlide", "value": 1
      },
      "value": 0.1
    },

    "stroke": {"value": "black"},
    "strokeOpacity":     {
      "condition": 
      {
        "param": "yearSlide", "value": 1
      },
      "value": 0
    },

    "tooltip": [{"field": "Country"},{"field": "Year"},{"field": "GDP", "title": "GDP (Million euro)"},{"field": "Employment", "title": "Employment Rate"},{"field": "GDP Growth", "format": ".2f"},{"field": "Employment Rate Change", "format": ".2f"}]

  }



}
