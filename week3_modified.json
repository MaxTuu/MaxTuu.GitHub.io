{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "Productivity UK",
  
     "title": {
      "text": "Change in Gross National Income, 2010-2021",
      "subtitle":"Percentage change on the previous quater. Source: ons.gov.uk",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black",
      "fontSize":15,
      "font": "Italic"
    },
    
    "config":{"background": "#F2DFCE"},

    "data": {
      "url": "https://raw.githubusercontent.com/MaxTuu/MaxTuu.GitHub.io/main/week3_modified_data.csv"},
    "height": 300,
    "width": 300,
    "mark": {
      "type": "line",
      "point": false,
      "interpolate": "monotone",
      "color": "#ad3c5f"
    },
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "axis": {
          "title": null,
          "grid": true, "gridColor": "lightgrey"
        }
        
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "",
        "axis": { "grid": true, "gridColor": "darkgrey"}
        
      }
    }
  }
